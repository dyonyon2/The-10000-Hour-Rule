<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dyonyon.The10000HourRule.mapper.UserSignupMapper">
    <select id="checkProfileDuplication" parameterType="java.lang.String" resultType="int">
        SELECT COUNT(*) FROM USER_PROFILE WHERE ${key} = '${value}'
    </select>
    <select id="checkAuthDuplication" parameterType="java.lang.String" resultType="int">
        SELECT COUNT(*) FROM USER_AUTH WHERE ${key} = '${value}'
    </select>
    <insert id="insertSignupUser" parameterType="com.dyonyon.The10000HourRule.domain.user.UserDetailInfo">
        INSERT INTO "USER" VALUES (USER_SEQ.NEXTVAL, '${user_id}', '0')
    </insert>
    <insert id="insertSignupUserProfile" parameterType="com.dyonyon.The10000HourRule.domain.user.UserDetailInfo">
        INSERT INTO USER_PROFILE VALUES ('${user_idx}', '${user_id}', '${name}', '${nickname}', '${sex}', '${birth}', '${region}', '${introduction}', '${img_url}',SYSDATE, SYSDATE)
    </insert>
    <insert id="insertSignupUserAuth" parameterType="com.dyonyon.The10000HourRule.domain.user.UserDetailInfo">
        INSERT INTO USER_AUTH VALUES ('${user_idx}', '${user_id}', '${pw}', '${name}', '${phone}', '${mail}', add_months(TRUNC(SYSDATE) + 1, 2) , SYSDATE)
    </insert>
    <select id="getUserIdx" parameterType="java.lang.String" resultType="java.lang.String">
        SELECT USER_IDX FROM "USER" WHERE USER_ID = '${user_id}'
    </select>
</mapper>