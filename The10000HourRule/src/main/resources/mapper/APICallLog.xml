<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dyonyon.The10000HourRule.repository.LogRepository">
    <insert id="insertUserLog" parameterType="com.dyonyon.The10000HourRule.domain.APICallLogInfo">
        INSERT INTO USER_LOG (REQ_ID, USER_IDX, API_URL, REQ_DATA) VALUES ('${req_id}', '${user_idx}', '${api_url}', '${req_data}');
    </insert>
    <select id="getUserIdx" parameterType="java.lang.String" resultType="java.lang.String">
        SELECT USER_IDX FROM "USER" WHERE USER_ID = '${user_id}'
    </select>
</mapper>